#!./Selene 
-- The unavoidable "Hello world"

Selene.UseCurses()

local pwnd,err = SelCurses.init()

pwnd:print("Hello world")
pwnd:refresh()

pwnd:getch()

local w,h = pwnd:GetSize()
local s = "Size w:".. w .. " h:" .. h
pwnd:PrintAt( (w-s:len())/2, h/2, s )
pwnd:refresh()

pwnd:getch()

-- No need to destroy the primary window
SelCurses.endwin()

